<agent xmlns="http://jadex.sourceforge.net/jadex" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
						http://jadex.sourceforge.net/jadex-0.96.xsd"
	name="Mindstorms" package="org.vu.advselforg.agentcontroller">

	<imports>
		<import>java.util.logging.*</import>
		<import>java.util.*</import>
		<import>jadex.adapter.fipa.SFipa</import>
		<import>jadex.adapter.fipa.*</import>
		<import>jadex.util.*</import>
		<import>org.vu.advselforg.robotcontroller.*</import>
	</imports>

	<beliefs>
		<belief name="robot" class="NxtBridge" />
		<belief name="Initialized" class="boolean">
			<fact>false</fact>
		</belief>
		<belief name="clusterDetected" class="boolean">
			<fact>false</fact>
		</belief>
		<belief name="WIMRunning" class="boolean">
			<fact>false</fact>
		</belief>
		<belief name="drivingBackwards" class="boolean">
			<fact>false</fact>
		</belief>
		<belief name="objectInGripper" class="String">
			<fact>"nothing"</fact>
		</belief>
		<belief name="scanningArea" class="boolean">
			<fact>false</fact>
		</belief>
		<belief name="topSonarDistance" class="int">
			<fact>0</fact>
		</belief>
		<belief name="bottomSonarDistance" class="int">
			<fact>0</fact>
		</belief>
		<belief name="sonarAngle" class="int">
			<fact>0</fact>
		</belief>

		<belief name="tachometerProblem" class="boolean">
			<fact>false</fact>
		</belief>
		<belief name="distanceTraveled" class="int">
			<fact>0</fact>
		</belief>
		<belief name="turning" class="boolean">
			<fact>false</fact>
		</belief>
	</beliefs>

	<plans>
		<plan name="start_robot">
			<body>new InitPlan("JOEY")</body>
			<trigger>
				<condition>!$beliefbase.Initialized </condition>
			</trigger>
		</plan>
		<plan name="StartWorldUpdatePlan">
			<body> new WorldBeliefUpdatePlan()</body>
			<trigger>
				<condition>$beliefbase.Initialized</condition>
			</trigger>
		</plan>
		<plan name="actionDrive">
			<body> new DriveForwardPlan()</body>
			<trigger>
				<condition>!$beliefbase.drivingBackwards &amp;&amp;
					$beliefbase.WIMRunning </condition>
			</trigger>
		</plan>
		<plan name="actionDriveBackwards">
			<body>new DriveBackwardPlan(60)</body>
			<trigger>
				<condition>$beliefbase.clusterDetected</condition>
			</trigger>
		</plan>
	</plans>


	<configurations>
		<configuration name="default">
		</configuration>
	</configurations>

</agent>